<div class="navbar-start">
  <%= link_to root_path, class: "navbar-item" do %>
    <span class="icon">
      <i class="fas fa-home"></i>
    </span>
    <span>Home</span>
  <% end %>

  <%= link_to search_resources_path, class: "navbar-item" do %>
    <span class="icon">
      <i class="fas fa-search"></i>
    </span>
    <span>Search</span>
  <% end %>

  <% if user_signed_in? %>
    <% if current_user.library_personnel? %>
      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          <span class="icon">
            <i class="fas fa-cog"></i>
          </span>
          <span>Manage</span>
        </a>

        <div class="navbar-dropdown">
          <%= link_to library_resources_path, class: "navbar-item" do %>
            <span class="icon">
              <i class="fas fa-book"></i>
            </span>
            <span>Resources</span>
          <% end %>
          
          <%= link_to users_path, class: "navbar-item" do %>
            <span class="icon">
              <i class="fas fa-users"></i>
            </span>
            <span>Users</span>
          <% end %>
          
          <%= link_to loans_path, class: "navbar-item" do %>
            <span class="icon">
              <i class="fas fa-hand-holding"></i>
            </span>
            <span>Loans</span>
          <% end %>
          
          <%= link_to fines_path, class: "navbar-item" do %>
            <span class="icon">
              <i class="fas fa-money-bill"></i>
            </span>
            <span>Fines</span>
          <% end %>
        </div>
      </div>
    <% else %>
      <%= link_to user_loans_path, class: "navbar-item" do %>
        <span class="icon">
          <i class="fas fa-book-reader"></i>
        </span>
        <span>My Loans</span>
      <% end %>
    <% end %>
  <% end %>
</div> 