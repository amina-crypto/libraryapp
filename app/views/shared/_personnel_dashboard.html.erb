<div class="dashboard">
  <div class="columns">
    <div class="column is-3">
      <div class="box">
        <aside class="menu">
          <p class="menu-label">
            Library Management
          </p>
          <ul class="menu-list">
            <li><%= link_to "Manage Resources", library_resources_path %></li>
            <li><%= link_to "Manage Users", users_path %></li>
            <li><%= link_to "Process Loans", loans_path %></li>
            <li><%= link_to "Handle Reservations", reservations_path %></li>
          </ul>
          
          <p class="menu-label">
            Reports
          </p>
          <ul class="menu-list">
            <li><%= link_to "Overdue Items", overdue_loans_path %></li>
            <li><%= link_to "Outstanding Fines", outstanding_fines_path %></li>
            <li><%= link_to "Usage Statistics", usage_statistics_path %></li>
          </ul>
        </aside>
      </div>
    </div>

    <div class="column is-9">
      <div class="box">
        <h2 class="title is-4">Library Overview</h2>
        
        <div class="columns is-multiline">
          <div class="column is-6">
            <div class="notification is-info">
              <p class="title is-5">Active Loans</p>
              <p class="subtitle is-1"><%= @total_active_loans %></p>
            </div>
          </div>
          
          <div class="column is-6">
            <div class="notification is-danger">
              <p class="title is-5">Overdue Items</p>
              <p class="subtitle is-1"><%= @total_overdue_loans %></p>
            </div>
          </div>
          
          <div class="column is-6">
            <div class="notification is-warning">
              <p class="title is-5">Pending Reservations</p>
              <p class="subtitle is-1"><%= @pending_reservations %></p>
            </div>
          </div>
          
          <div class="column is-6">
            <div class="notification is-success">
              <p class="title is-5">Total Resources</p>
              <p class="subtitle is-1"><%= @total_resources %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="box">
        <h2 class="title is-4">Tasks Requiring Attention</h2>
        <div class="content">
          <ul class="task-list">
            <% if @overdue_loans.any? %>
              <li class="has-text-danger">
                <%= @overdue_loans.count %> overdue items need attention
              </li>
            <% end %>
            
            <% if @pending_reservations.any? %>
              <li class="has-text-warning">
                <%= @pending_reservations.count %> reservations need processing
              </li>
            <% end %>
            
            <% if @low_stock_resources.any? %>
              <li class="has-text-info">
                <%= @low_stock_resources.count %> resources are running low on copies
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div> 