<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <div class="box">
          <!-- Header -->
          <div class="has-text-centered mb-6">
            <h1 class="title is-3">Welcome to Our Library</h1>
            <p class="subtitle is-5">Create your account</p>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Name Fields -->
            <div class="columns">
              <div class="column">
                <div class="field">
                  <%= f.label :name, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.text_field :name, class: "input", placeholder: "First name", required: true %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                  </div>
                </div>
              </div>

              <div class="column">
                <div class="field">
                  <%= f.label :surname, class: "label" %>
                  <div class="control has-icons-left">
                    <%= f.text_field :surname, class: "input", placeholder: "Last name", required: true %>
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Email Field -->
            <div class="field">
              <%= f.label :email, class: "label" %>
              <div class="control has-icons-left">
                <%= f.email_field :email, autocomplete: "email", class: "input", placeholder: "your.email@example.com", required: true %>
                <span class="icon is-small is-left">
                  <i class="fas fa-envelope"></i>
                </span>
              </div>
              <p class="help">This will be your login username</p>
            </div>

            <!-- Address Field -->
            <div class="field">
              <%= f.label :contact_address, class: "label" %>
              <div class="control has-icons-left">
                <%= f.text_area :contact_address, class: "textarea", placeholder: "Your address (optional)" %>
              </div>
            </div>

            <!-- Password Fields -->
            <div class="field">
              <%= f.label :password, class: "label" %>
              <div class="control has-icons-left">
                <%= f.password_field :password, autocomplete: "new-password", 
                    class: "input", 
                    placeholder: "Choose a strong password",
                    required: true %>
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
              </div>
              <% if @minimum_password_length %>
                <p class="help">Minimum <%= @minimum_password_length %> characters</p>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, class: "label" %>
              <div class="control has-icons-left">
                <%= f.password_field :password_confirmation, 
                    autocomplete: "new-password", 
                    class: "input", 
                    placeholder: "Confirm your password",
                    required: true %>
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
              </div>
            </div>

            <!-- Terms and Conditions -->
            <div class="field">
              <div class="control">
                <label class="checkbox">
                  <input type="checkbox" required>
                  I agree to the <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a>
                </label>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="field">
              <div class="control">
                <%= f.submit "Sign up", class: "button is-primary is-fullwidth" %>
              </div>
            </div>
          <% end %>

          <!-- Links -->
          <div class="has-text-centered mt-5">
            <p class="is-size-6">
              Already have an account? 
              <%= link_to "Log in", new_session_path(resource_name), class: "has-text-primary has-text-weight-bold" %>
            </p>
          </div>

          <!-- Social Sign Up -->
          <div class="has-text-centered mt-6">
            <p class="is-size-6 mb-3">Or sign up with</p>
            <div class="buttons is-centered">
              <button class="button is-light">
                <span class="icon">
                  <i class="fab fa-google"></i>
                </span>
                <span>Google</span>
              </button>
              <button class="button is-light">
                <span class="icon">
                  <i class="fab fa-facebook"></i>
                </span>
                <span>Facebook</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% content_for :styles do %>
  <style>
    .box {
      border-radius: 8px;
      box-shadow: 0 2px 3px rgba(10, 10, 10, 0.1), 0 0 0 1px rgba(10, 10, 10, 0.1);
      padding: 2.5rem;
    }

    .input, .textarea {
      transition: border-color 0.3s ease;
    }

    .input:focus, .textarea:focus {
      box-shadow: 0 0 0 0.125em rgba(72, 95, 199, 0.25);
    }

    .button.is-primary {
      background-color: #485fc7;
      transition: background-color 0.3s ease;
    }

    .button.is-primary:hover {
      background-color: #3e54b8;
    }

    .help {
      font-size: 0.85rem;
    }

    .checkbox {
      cursor: pointer;
    }

    .social-buttons {
      margin-top: 2rem;
    }
  </style>
<% end %>
